{
  "pluginAlias": "Meross",
  "pluginType": "accessory",
  "headerDisplay": "<p align='center'><img width='150px' src='https://raw.githubusercontent.com/donavanbecker/homebridge-meross/master/meross/03.png'></p>\n\nThe **Homebridge Meross** plugin allows you to control your Meross Devices from HomeKit. To get started setup your config below.",
  "footerDisplay": "Your Meross device is setup. Please raise any issues on our [project page](https://github.com/donavanbecker/homebridge-meross/issues).",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
              "title": "Name",
              "type": "string",
              "default": "Meross",
              "required": true
            },
      "accessories": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "placeholder": "Meross",
              "required": true
            },
            "deviceUrl": {
              "title": "Device IP Address",
              "type": "string",
              "required": true,
              "placeholder": "192.168.1.17"
            },
            "hardwareVersion": {
              "title": "Hardware Version",
              "type": "integer",
              "required": true
            },
            "channel": {
              "title": "Device Channel",
              "type": "integer",
              "required": true
            },
            "messageId": {
              "title": "MessageID",
              "type": "string",
              "required": true
            },
            "timestamp": {
              "title": "TimeStamp",
              "type": "integer",
              "required": true
            },
            "sign": {
              "title": "Sign",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}
